<%= render 'shared/navbar' %>
<div>
  <div class="index-banner">
    <h2 class="text-black text-center">Find the perfect Granny in your area:</h2>
  </div>
</div>

<div class="container col-md-11 mt-3">
  <h4 class="mb-3"><%=@grannies.length%> available in 
  <% if params[:query] == nil || params[:query].empty? %>
    Berlin 
  <% else %>
    <%= params[:query]%>
  <% end %></h4>
  <div class="card-deck">
    <% @grannies.each do |granny| %>
    <div class="card mb-4">
      <% if granny.photo.attached? %>
      <%= cl_image_tag granny.photo.key, height: 170, width: 298, crop: :fill, class: "granny_index" %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"> <%= granny.first_name %></h5>
        <p class="card-text"> Age: <%=granny.age%></p>
        <p> Activity: <%=granny.activity.name%></p>
        <p> District: <%=granny.district%></p>
        <div>
          <p> Price: <%=granny.price%>â‚¬</p>
          <%= link_to 'Profile Info', granny_path(granny), class: "btn btn-gradient w-100" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
