<%= render 'shared/navbar' %>
<div class="container col-md-11 mt-3">
  <h1 class="text-center pt-3 mb-3">Find the perfect Granny in your area</h1>
  <h4 class="mb-3"><%=@grannies.length%> available in Kreuzberg</h4>
  <div class="card-deck">
    <% @grannies.each do |granny| %>
    <div class="card mb-4">
      <%= cl_image_tag granny.photo.key, height: 170, width: 298, crop: :fill %>
      <div class="card-body">
        <h5 class="card-title"> <%= granny.first_name %></h5>
        <p class="card-text"> Age: <%=granny.age%></p>
        <p> Activity: <%=granny.activity.name%></p>
        <div>
        <p> Price: <%=granny.price%>â‚¬</p>
        <%= link_to 'Profile Info', granny_path(granny), class: "btn btn-gradient w-100" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
