<%= render 'shared/navbar' %>
<div class="container col-md-11 mt-3">
  <h1 class="text-left pt-3 mb-3">Future Grannies</h1>
  <p class = "text-left pt-1 mb-1">Book grannies for upcoming occasions!</p>
  <div class="card-deck">
    <% @future_appointments.each do |appointment| %>
    <div class="card mb-4">
      <img class="card-img-top" src="https://www.newtimes.co.rw/sites/default/files/styles/mystyle/public/main/articles/2015/11/18/1447873393o-GRANDPARENTS-facebook.jpg" alt="Card image cap">
      <div class="card-body">
        <h5><%= appointment.start_date.strftime("%B") %></h5>
        <h5 class="card-title"> <%= appointment.granny.first_name %></h5>
        <p class="card-text"> Age: <%=appointment.granny.age%></p>
        <p> Activity: <%=appointment.granny.activity.name%></p>
        <div>
        <p> Price: 22€</p>
        <%= link_to 'Profile Info', granny_path(appointment.granny), class: "btn btn-gradient w-100" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <a class="btn btn-gradient" href="/">Explore get a granny!</a>
  <h1 class="text-left pt-3 mb-3">Grannies from the past</h1>
  <p class = "text-left pt-1 mb-1">Which grannies did you book?</p>
  <div class="card-deck">
    <% @past_appointments.each do |appointment| %>
    <div class="card mb-4">
      <img class="card-img-top" src="https://www.newtimes.co.rw/sites/default/files/styles/mystyle/public/main/articles/2015/11/18/1447873393o-GRANDPARENTS-facebook.jpg" alt="Card image cap">
      <div class="card-body">
        <h5><%= appointment.start_date.strftime("%B") %></h5>
        <h5 class="card-title"> <%= appointment.granny.first_name %></h5>
        <p class="card-text"> Age: <%=appointment.granny.age%></p>
        <p> Activity: <%=appointment.granny.activity.name%></p>
        <div>
        <p> Price: 22€</p>
        <%= link_to 'Profile Info', granny_path(appointment.granny), class: "btn btn-gradient w-100" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>


