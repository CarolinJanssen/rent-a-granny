<%= render 'shared/navbar' %>
<div class="row">
  <%= link_to "Back" , grannies_path, class: "btn btn-gradient w-20 ml-5 mr-0 mt-3"%>
  <div class="container p-3 w-100 ml-4">
    <div class="card p-5">
      <div class="text-center pb-3">
        <h1>Update your Profile <%=@granny.first_name%>!</h1>
      </div>
      <div class="text-align-center">
        <%= simple_form_for(@granny) do |f| %>
        <div class="flex-fill row justify-content-between ml-0 mr-0 bg-white">
          <div class="flex-fill bd-highlight mr-3"> <%= f.input :first_name %> </div>
          <div class="flex-fill bd-highlight ml-3"> <%= f.input :last_name %> </div>
        </div>
          <div class="flex-fill row justify-content-between ml-0 mr-0 bg-white">
          <div class="flex-fill bd-highlight mr-3"> <%= f.input :age %> </div>
          <div class="flex-fill bd-highlight ml-3"> <%= f.input :district %> </div>
          <div class="flex-fill bd-highlight ml-3"> <%= f.association :activity %> </div>
        </div>
      </div>
      <%= f.input :description %>
      <%= f.input :important_notes %>
      <%= f.input :photo, as: :file %>
      <br>
      <div class="row">
        <div class="col-md-2 text-center bg-white">
          <%= f.submit "Save changes", class: "btn btn-gradient w-20" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
